@model IEnumerable<DBESearch.Models.DBECompany>
@using DBESearch.Models;

<style>
    table[class='resultsGrid'] {
        border: 1px solid black;
        background-color: white;
        border-collapse: collapse;
        width: 75%;
    }

    th, td[class='resultsGrid'] {
        text-align: left;
        padding: 8px;
    }

        th[class='resultsGrid'] {
            height: 50px;
        }

    tr:nth-child(even)[class='resultsGrid'] {
        background-color: #f2f2f2
    }

    tr:hover[class='resultsGrid']{
        background-color: #d1d1d1;
        cursor: pointer;
    }
</style>
&nbsp;
&nbsp;
&nbsp;
&nbsp;
&nbsp;
<table id="SearchResults" style="margin: 0px auto;" class="resultsGrid">
    <tr  class="resultsGrid">
        <th class="resultsGrid">Company</th>
        <th class="resultsGrid">Address</th>
        <th>Phone Number</th>
        <th>Detail</th>
    </tr>
    @foreach (var company in Model)
    {
        <tr class="resultsGrid">
            <td id="companyid" style="display:none;">@company.CompanyId</td>
            <td>@company.CompanyName</td>
            <td>@company.CompanyAddress , @company.City, @company.State @company.Zip</td>
            <td>@company.Phone</td>
            <td id="url">@Html.ActionLink(@company.CompanyName, "companydetails", new { id = company.CompanyId });</td>
        </tr>
    }
</table>


