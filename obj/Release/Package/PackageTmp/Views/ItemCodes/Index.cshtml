@model IEnumerable<DBESearch.Models.ItemCode>

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<br />

<div id="itemCodesContainer"></div>

@section scripts
{
    @Scripts.Render("~/Scripts/jtable")

    <script>
    $(document).ready(function () {
        $('#itemCodesContainer').jtable({
            title: 'Item Codes',
            paging: true,
            pageSize: 20,
            sorting: true,
            defaultSorting: 'NAICSCode ASC',
            actions: {
                listAction:   '/ItemCodes/List',
                deleteAction: '/ItemCodes/Delete',
                updateAction: '/ItemCodes/Update',
                createAction: '/ItemCodes/Insert'
            },
            fields: {
                ItemCode: {
                    title: 'ARDOT Code',
                    width: '10%',
                    key: true,
                    list: true,
                    create: true,
                    edit: true

                },
                Description: {
                    title: 'Description',
                    width: '40%'
                }
            }
        });
        $('#itemCodesContainer').jtable('load');
    });
    </script>
}